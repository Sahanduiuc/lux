{
    "python": {
        "lux_version": "lux.__version__"
    },
    "github": {
        "lux": {
            "version": "{{ lux_version }}",
            "release_notes": "docs/history"
        }
    },
    "shell": {
        "lux": {
            "command": "{{ python }} manage.py website media --js-src example/js --scss-src example/scss/deps",
            "description": "copy lux media files to example directory"
        },
        "js": {
            "command": [
                "npm run-script test-light",
                "npm run-script build"
            ],
            "interactive": true
        }
    },
    "watch": {
        "js": {
            "files": [
                "example/js/*.js",
                "example/js/tests/*.js",
                "example/js/tests/**/*.js",
                "lux/js/*.js",
                "lux/js/**/*.js",
                "lux/js/**/templates/*.html"
            ],
            "command": "js"
        },
        "css": {
            "files": [
                "example/scss/*.scss",
                "example/scss/**/*.scss",
                "lux/media/scss/*.scss",
                "lux/media/scss/**/*.scss"
            ],
            "command": "css"
        }
    },
    "tasks": {
        "release": {
            "description": "make a new release to github",
            "command": ["python", "github:lux"]
        },
        "js": {
            "description": "Create the js files",
            "command": [
                "shell:lux",
                "shell:js"
            ]
        },
        "css": {
            "description": "Create css file",
            "command": [
                "shell:lux",
                "shell:js"
            ]
        },
        "dev": {
            "description": "Start development watch server",
            "command": ["watch"]
        }
    }
}
