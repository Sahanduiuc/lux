{
    "github": {
        "lux": {
            "python_module": "lux",
            "version": "lux.__version__",
            "release_notes": "docs/history"
        }
    },
    "shell": {
        "lux": {
            "command": "{{ python }} manage.py website media --js-src example/js --scss-src example/scss/deps",
            "description": "copy lux media files to example directory"
        },
        "js": {
            "command": [
                "npm run-script build"
            ]
        }
    },
    "watch": {
        "js": {
            "files": [
                "example/js/*.js",
                "example/js/tests/*.js",
                "example/js/tests/**/*.js",
                "lux/media/js/*.js",
                "lux/media/js/**/*.js",
                "lux/media/js/**/templates/*.html"
            ],
            "command": "js"
        },
        "css": {
            "files": [
                "example/scss/*.scss",
                "example/scss/**/*.scss",
                "lux/media/scss/*.scss",
                "lux/media/scss/**/*.scss"
            ],
            "command": "css"
        }
    },
    "tasks": {
        "release": {
            "description": "make a new release to github",
            "command": ["github:lux"]
        },
        "js": {
            "description": "Create the js files",
            "command": [
                "shell:lux",
                "shell:js"
            ]
        },
        "uglify": {
            "command": "./node_modules/.bin/uglifyjs example/web/media/quantmind/quantmind.js -c -m -o quantmind/web/media/quantmind/quantmind.min.js"
        },
        "dev": {
            "description": "Start development watch server",
            "command": ["watch"]
        }
    }
}
