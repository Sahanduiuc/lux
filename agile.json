{
    "github": {
        "pulsar": {
            "python_module": "lux",
            "version": "lux.__version__",
            "release_notes": "docs/history",
            "dist": {
                "shell": [
                    "rm -rf dist",
                    "{{ python }} setup.py sdist upload"
                ]
            }
        }
    },
    "shell": {
        "lux": {
            "command": [
                "rm -rf dist",
                "{{ python }} setup.py sdist"
            ]
        }
    },
    "tasks": {
        "release": {
            "description": "make a new release to github",
            "command": ["github:lux"]
        }
    }
}
