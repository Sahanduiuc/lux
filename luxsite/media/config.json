{
    "js": {
        "luxsite": {
            "options": {
                "banner": "luxsite/media/js/banner.js"
            },
            "src": [
                "luxsite/media/js/require.config.js",
                "luxsite/media/build/bundle.js"
            ],
            "dest": "luxsite/media/luxsite/luxsite.js"
        }
    },
    "sass": {
        "luxsite": {
            "files": {
                "luxsite/media/luxsite/luxsite.css": "luxsite/media/scss/luxsite.scss"
            }
        }
    },
    "cssmin": {
        "luxsite": {
            "files": {
                "luxsite/media/luxsite/luxsite.min.css": ["luxsite/media/luxsite/luxsite.css"]
            }
        }
    },
    "http": {
        "giotto": {
            "options": {
                "url": "https://raw.githubusercontent.com/quantmind/giotto/master/dist/giotto.js"
            },
            "dest": "luxsite/media/luxsite/giotto.js"
        }
    },
    "watch": {
        "luxsite": ["luxsite/media/js/**/*.js",
                    "luxsite/media/tests/**/*.js"],
        "lux": ["lux/media/js/**/*.js",
                "lux/media/js/**/*.tpl.html"]
    }
}
