{
    "js": {
        "luxsite": {
            "options": {
                "banner": "js/banner.js"
            },
            "src": [
                "js/require.config.js",
                "js/build/bundle.js"
            ],
            "dest": "luxsite/media/luxsite/luxsite.js"
        },
        "watch": {
            "luxsite": ["js/*/**.js"]
        }
    },
    "sass": {
        "luxsite": {
            "files": {
                "luxsite/media/luxsite/luxsite.css": "scss/luxsite.scss"
            }
        }
    },
    "cssmin": {
        "luxsite": {
            "files": {
                "luxsite/media/luxsite/luxsite.min.css": ["luxsite/media/luxsite/luxsite.css"]
            }
        }
    },
    "http": {
        "giotto": {
            "options": {
                "url": "https://raw.githubusercontent.com/quantmind/giotto/master/dist/giotto.js"
            },
            "dest": "luxsite/media/luxsite/giotto.js"
        }
    },
    "eslint": {
        "options": {
            "quiet": false
        },
        "target": ["Gruntfile.js",
                   "js/*.js",
                   "../lux/media/js/**/*.js"]
    },
    "thirdParty": [
        "d3",
        "giotto",
        "lodash",
        "moment",
        "moment-timezone",
        "videojs",
        "angular",
        "angular-cookies",
        "angular-ui-bootstrap",
        "angular-file-upload",
        "angular-img-crop",
        "angular-moment",
        "angular-sanitize",
        "angular-ui-grid",
        "angular-infinite-scroll",
        "angular-ui-select"
        ]
}
