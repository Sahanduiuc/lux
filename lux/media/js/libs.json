{
    "html2js": {
        "bs": {
            "src": "lux/media/js/bs/*.tpl.html",
            "dest": "lux/media/js/templates/bs-templates.js"
        },
        "options": {
            "base": "lux/media/js"
        },
        "cms": {
            "src": "lux/media/js/cms/templates/*.tpl.html",
            "dest": "lux/media/js/templates/cms-templates.js"
        },
        "page": {
            "src": "lux/media/js/page/*.tpl.html",
            "dest": "lux/media/js/templates/page-templates.js"
        },
        "message": {
            "src": "lux/media/js/message/*.tpl.html",
            "dest": "lux/media/js/templates/message-templates.js"
        },
        "grid": {
            "src": "lux/media/js/grid/templates/*.tpl.html",
            "dest": "lux/media/js/templates/grid-templates.js"
        },
        "blog": {
            "src": "lux/media/js/blog/templates/*.tpl.html",
            "dest": "lux/media/js/templates/blog-templates.js"
        },
        "nav": {
            "src": "lux/media/js/nav/templates/*.tpl.html",
            "dest": "lux/media/js/templates/nav-templates.js"
        },
        "users": {
            "src": "lux/media/js/users/*.tpl.html",
            "dest": "lux/media/js/templates/users-templates.js"
        },
        "gaeblog": {
            "src": "lux/media/js/gaeblog/templates/*.tpl.html",
            "dest": "lux/media/js/templates/gaeblog-templates.js",
            "options": {
                "base": "lux/media/js/gaeblog"
            }
        }
    },
    "lux": {
        "options": {
            "banner": "lux/media/js/banner.js"
        },
        "src": ["lux/media/js/open.js",
                "lux/media/js/underscore.js",
                "lux/media/js/utils.js",
                "lux/media/js/services/*.js",
                "lux/media/js/cms/**/*.js",
                "lux/media/js/page/*.js",
                "lux/media/js/forms/*.js",
                "lux/media/js/message/*.js",
                "lux/media/js/grid/**/*.js",
                "lux/media/js/users/*.js",
                "lux/media/js/bootstrap.js",
                "lux/media/js/blog/*.js",
                "lux/media/js/bs/*.js",
                "lux/media/js/nav/*.js",
                "lux/media/js/misc/*.js",
                "lux/media/js/google/*.js",
                "lux/media/js/templates/*.js",
                "lux/media/js/close.js"],
        "dest": "lux/media/lux/lux.js"
    },
    "cfg": {
        "src": ["lux/media/js/config/open.js",
                "lux/media/js/config/paths.js",
                "lux/media/js/config/shim.js",
                "lux/media/js/config/close.js"],
        "dest": "lux/media/lux/cfg.js"
    },
    "luxsite": {
        "options": {
            "banner": "lux/media/js/banner.js"
        },
        "src": ["lux/media/lux/cfg.js",
                "lux/media/js/luxsite/src.js"],
        "dest": "examples/luxsite/media/luxsite/luxsite.js"
    }
}
