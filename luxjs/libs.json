{
    "html2js": {
        "bs": {
            "src": "luxjs/bs/*.tpl.html",
            "dest": "luxjs/templates/bs-templates.js"
        },
        "options": {
            "base": "luxjs"
        },
        "cms": {
            "src": "luxjs/cms/templates/*.tpl.html",
            "dest": "luxjs/templates/cms-templates.js"
        },
        "page": {
            "src": "luxjs/page/*.tpl.html",
            "dest": "luxjs/templates/page-templates.js"
        },
        "message": {
            "src": "luxjs/message/*.tpl.html",
            "dest": "luxjs/templates/message-templates.js"
        },
        "grid": {
            "src": "luxjs/grid/templates/*.tpl.html",
            "dest": "luxjs/templates/grid-templates.js"
        },
        "blog": {
            "src": "luxjs/blog/templates/*.tpl.html",
            "dest": "luxjs/templates/blog-templates.js"
        },
        "nav": {
            "src": "luxjs/nav/templates/*.tpl.html",
            "dest": "luxjs/templates/nav-templates.js"
        },
        "users": {
            "src": "luxjs/users/*.tpl.html",
            "dest": "luxjs/templates/users-templates.js"
        },
        "gaeblog": {
            "src": "luxjs/gaeblog/templates/*.tpl.html",
            "dest": "luxjs/templates/gaeblog-templates.js",
            "options": {
                "base": "luxjs/gaeblog"
            }
        }
    },
    "lux": {
        "options": {
            "banner": "luxjs/banner.js"
        },
        "src": ["luxjs/open.js",
                "luxjs/underscore.js",
                "luxjs/utils.js",
                "luxjs/services/*.js",
                "luxjs/cms/**/*.js",
                "luxjs/page/*.js",
                "luxjs/forms/*.js",
                "luxjs/message/*.js",
                "luxjs/grid/**/*.js",
                "luxjs/users/*.js",
                "luxjs/bootstrap.js",
                "luxjs/blog/*.js",
                "luxjs/bs/*.js",
                "luxjs/nav/*.js",
                "luxjs/misc/*.js",
                "luxjs/google/*.js",
                "luxjs/templates/*.js",
                "luxjs/close.js"],
        "dest": "lux/media/lux/lux.js"
    },
    "cfg": {
        "src": ["luxjs/config/open.js",
                "luxjs/config/paths.js",
                "luxjs/config/shim.js",
                "luxjs/config/close.js"],
        "dest": "lux/media/lux/cfg.js"
    },
    "luxsite": {
        "options": {
            "banner": "luxjs/banner.js"
        },
        "src": ["lux/media/lux/cfg.js",
                "luxjs/luxsite/src.js"],
        "dest": "examples/luxsite/media/luxsite/luxsite.js"
    }
}
