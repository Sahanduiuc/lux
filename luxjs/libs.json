{
    "html2js": {
        "bs": {
            "src": "luxjs/bs/*.tpl.html",
            "dest": "luxjs/bs/templates.js"
        },
        "options": {
            "base": "luxjs"
        },
        "page": {
            "src": "luxjs/page/*.tpl.html",
            "dest": "luxjs/page/page-template.js"
        },
        "blog": {
            "src": "luxjs/blog/*.tpl.html",
            "dest": "luxjs/blog/blog-template.js"
        },
        "nav": {
            "src": "luxjs/nav/*.tpl.html",
            "dest": "luxjs/nav/nav-template.js"
        },
        "users": {
            "src": "luxjs/users/*.tpl.html",
            "dest": "luxjs/users/templates.js"
        },
        "gaeblog": {
            "src": "luxjs/gaeblog/templates/*.tpl.html",
            "dest": "luxjs/gaeblog/templates.js",
            "options": {
                "base": "luxjs/gaeblog"
            }
        }
    },
    "lux": {
        "options": {
            "banner": "luxjs/banner.js"
        },
        "src": ["luxjs/open.js",
                "luxjs/underscore.js",
                "luxjs/utils.js",
                "luxjs/class.js",
                "luxjs/services/*.js",
                "luxjs/page/*.js",
                "luxjs/forms/*.js",
                "luxjs/users/*.js",
                "luxjs/bootstrap.js",
                "luxjs/blog/*.js",
                "luxjs/bs/*.js",
                "luxjs/nav/*.js",
                "luxjs/misc/*.js",
                "luxjs/google/*.js",
                "luxjs/viz/*.js",
                "luxjs/close.js"],
        "dest": "lux/media/lux/lux.js"
    },
    "luxRequire": {
        "src": "luxjs/require.js",
        "dest": "lux/extensions/angular/templates/lux.require.js"
    },
    "luxsite": {
        "options": {
            "banner": "luxjs/banner.js"
        },
        "src": ["examples/luxsite/src.js"],
        "dest": "examples/luxsite/media/luxsite/luxsite.js"
    },
    "gaeblog": {
        "src": ["luxjs/gaeblog/open.js",
                "luxjs/gaeblog/nav.js",
                "luxjs/gaeblog/blog.js",
                "luxjs/gaeblog/templates.js",
                "luxjs/gaeblog/elastic.js",
                "luxjs/gaeblog/close.js"],
        "dest": "examples/gaeblog/blogapp/media/blogapp/blogapp.js",
        "options": {
            "stripBanners": true,
            "banner": "luxjs/banner.js",
            "process": true
        }
    }
}
