{
    "html2js": {
        "options": {
            "base": "js"
        },
        "blog": {
            "src": "js/lux/blog/*.tpl.html",
            "dest": "js/lux/blog/blog-template.js"
        }
    },
    "lux": {
        "options": {
            "banner": "js/lux/banner.js"
        },
        "src": ["js/lux/open.js",
                "js/lux/utils.js",
                "js/lux/class.js",
                "js/lux/bootstrap.js",
                "js/lux/services/api.js",
                "js/lux/services/apis/*.js",
                "js/lux/page/*.js",
                "js/lux/blog/*.js",
                "js/lux/user/*.js",
                "js/lux/photos/*.js",
                "js/lux/google/*.js",
                "js/lux/viz/*.js",
                "js/lux/close.js"],
        "dest": "lux/media/lux/lux.js"
    },
    "lorem": {
        "src": ["js/lorem/start.js",
                "js/lorem/core.js",
                "js/lorem/close.js"],
        "dest": "lux/media/lux/lorem.js"
    },
    "tests": {
        "src": ["js/tests/open.js",
                "js/tests/boot.js",
                "js/tests/class.js",
                "js/tests/app.js",
                "js/tests/google.js",
                "js/tests/close.js"],
        "dest": "tests/js/tests.js",
        "minify": false
    }
}